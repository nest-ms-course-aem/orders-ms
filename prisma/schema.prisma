generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  DELIVERED
  CANCELLED
}

model Order {
  id          String @id @default(uuid())
  totalAmount Float
  totalItems  Int

  status OrderStatus @default(PENDING)
  paid   Boolean     @default(false)
  paidAt DateTime? //nullable

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  OrderItem OrderItem[]
}

// Create a new brand model that will have the logic of the oreders details
model OrderItem {
  id        String @id @default(uuid())
  productId Int // must be a relations but remember they are in different tables if they were in the same we'd be able to use it the relations
  quantity  Int
  price     Float

  Order   Order?  @relation(fields: [orderId], references: [id])
  orderId String?
}
